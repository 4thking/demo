<div class="center">
  <div class="row">

  <div class="filter">
    <%= form_tag profiles_path, method: :get do %>
      <%= label_tag :steam, "Steam ID: " %>
      <%= text_field_tag :steam %>
      <%= submit_tag "Search", name: nil %>
    <% end %>
  </div>

<br>
<br>
<br>


    <% @profiles.each do |profile| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(profile.image.url), profile %>
        <div class="caption">
          <h3> <%= profile.user.username %> </h3>
          <% if profile.steam.present? %>  
            <p> <%= "Steam ID: #{profile.steam}" %> </p>
          <% end %>
          <p> <%= "MMR: #{profile.mmr}" %> </p>
          <% if (user_signed_in?) && (current_user == profile.user) %>
            <%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-link" %>
            <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
   </div> 
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Profile', new_profile_path %>
<% end %>
